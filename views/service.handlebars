<div class="container">
<div class="row">
<div class="col s2 m12">
      <div class="card horizontal">
        <div class="card-image">
          <img src="{{service.serviceImg}}">
          <!--<a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">calendar_today</i></a>
          <div class="my-rating jq-stars"></div>-->
        </div>
        <div class="card-content">
          <span class="card-title">{{service.serviceTitle}}</span>
          <p>Description: {{service.serviceDesc}}</p>
          <p>Price: ${{service.servicePrice}}</p>
          <p>{{service.serviceDesc}}</p>
          <input id="service" type="hidden" value="{{service.id}}">
        </div>
      </div>
    </div>
</div>
 <div class="row">
   <h5>Rate the service</h5>
   <form class="col s12">
     
      <div class="col s3">
        <br>
        <span class="my-rating-9"></span>
        <span class="live-rating" id="stars"></span>
      </div>
      <div class="col s7">
         <div class="input-field col s12">
          <input id="icon_comment" type="text" class="validate">
          <label for="icon_comment">Comment</label>
        </div>
      </div>
      <div class="col s2">
        <br>
         <a class="waves-effect waves-light btn-small" id="btnComments">Submit</a>
      </div>
    </form>
 </div> 
<div class="row">
<div class="col s2 m12">
    <ul class="collection">
      {{#each comments}}
    <li class="collection-item avatar">
      <span class="title">Comment</span>
      <p>{{this.serviceCom}}</p>
      <a href="#!" class="secondary-content">{{this.serviceRat}}<i class="material-icons">grade</i></a>
    </li>
    {{/each}}
  </ul>
</div>
</div>
</div>

  